<form action="/URLs">
  <form id="url-form">
    <div class="d-flex justify-content-center">
      <div class="col-6">
        <input type="text" name="url" class="form-control" id="url-input" placeholder="input URL here" />
      </div>  
    </div>
    <div class="d-flex justify-content-center mt-3">
      <button type="submit" class="btn btn-primary" id="shorten-submit-button">
              Shorten
      </button>
    </div>
    <div class="show-result mt-3">
        <h5 class="d-flex justify-content-center"> Success! Please use this link:</h5>
        <h5 class="d-flex justify-content-center text-primary"> {{baseURL}}{{randomURL}} </h5>
    </div>
  </form>
</form>